model RehabFacility {
  id                  String    @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  sigunCd             String    @map("sigun_cd")
  sigunNm             String    @map("sigun_nm")
  instNm              String    @map("inst_nm")
  telno               String?
  hmpgUrl             String?   @map("hmpg_url")
  instlStatmntDe      String?   @map("instl_statmnt_de")
  refineLotnoAddr     String?   @map("refine_lotno_addr")
  refineRoadnmAddr    String?   @map("refine_roadnm_addr")
  refineZipCd         String?   @map("refine_zip_cd")
  refineWgs84Lat      Float     @map("refine_wgs84_lat")
  refineWgs84Logt      Float     @map("refine_wgs84_logt")

  createdAt           DateTime  @default(now()) @map("created_at")
  updatedAt           DateTime  @updatedAt @map("updated_at")

  @@map("rehab_facilities")
}

model DisabilitySportsFacility {
  id                    String    @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  bizrno                String    @unique @db.VarChar(20)
  facilityName          String    @map("facility_name") @db.VarChar(255)
  facilityOwner         String?   @map("facility_owner") @db.VarChar(255)
  facilityPhone         String?   @map("facility_phone") @db.VarChar(50)
  facilityAddress       String    @map("facility_address") @db.VarChar(500)
  latitude              Float?
  longitude             Float?
  vehicleSupport        String?   @map("vehicle_support") @db.VarChar(100)
  disabilitySupport     String?   @map("disability_support") @db.Text
  facilityImageBase64   String?   @map("facility_image_base64") @db.Text
  courseInfo            Json?     @map("course_info") @db.JsonB

  createdAt             DateTime  @default(now()) @map("created_at")
  updatedAt             DateTime  @updatedAt @map("updated_at")

  @@map("disability_sports_facilities")
}
