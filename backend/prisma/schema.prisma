generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String    @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  name                String    @db.VarChar(255)
  address             String?   @db.VarChar(255)
  latitude            Float?
  longitude           Float?

  // Status and authentication
  status              String    @default("temporary") @db.VarChar(50)
  authProvider        String?   @map("auth_provider") @db.VarChar(50)
  providerId         String?   @map("provider_id") @db.VarChar(255)

  // Additional information
  agreement           Boolean   @default(false)
  accessibilityStatus String?  @map("accessibility_status") @db.VarChar(20)
  activitySchedule    Json?    @map("activity_schedule") @db.JsonB
  otherSportDescription String? @map("other_sport_description") @db.VarChar(255)  // 기타 운동 설명
  otherDisabilityDescription String? @map("other_disability_description") @db.VarChar(255)  // 기타 장애 유형 설명
  userType            Int      @map("user_type")

  // UserType 2 Fields
  gender              String?   @db.VarChar(10)
  ageGroup            String?   @map("age_group") @db.VarChar(20)
  phoneNumber         String?   @map("phone_number") @db.VarChar(20)
  email               String?   @db.VarChar(255)
  roles               String[]  @default([])
  volunteerExperience Boolean?  @map("volunteer_experience")
  vmsId               String?   @map("vms_id") @db.VarChar(50)
  assistantCertificate Boolean? @map("assistant_certificate")
  hourlyRate          String?   @map("hourly_rate") @db.VarChar(50)
  guardianNotifications Boolean? @map("guardian_notifications")
  guardianLinkedAccount String? @map("guardian_linked_account") @db.VarChar(255)
  assistantServices   String[]  @map("assistant_services") @default([])
  volunteerActivities String[]  @map("volunteer_activities") @default([])

  // Sport preferences
  sportPreference     String?  @map("sport_preference") @db.VarChar(20)

  // Timestamps
  createdAt          DateTime  @default(now()) @map("created_at") @db.Timestamptz
  updatedAt          DateTime  @default(now()) @map("updated_at") @db.Timestamptz

  @@unique([authProvider, providerId])
  @@index([status])
  @@map("users")
}

model DisabilityType {
  id          Int      @id @default(autoincrement())
  code        String   @db.VarChar(30)  // armDiscomfort와 같은 시스템 내부 코드
  name        String   @db.VarChar(30)  // 사용자에게 보여질 이름
  createdAt   DateTime @default(now()) @map("created_at") @db.Timestamptz
  updatedAt   DateTime @default(now()) @map("updated_at") @db.Timestamptz

  @@map("disability_types")
}

model SportType {
  id          Int      @id @default(autoincrement())
  code        String   @db.VarChar(30)  // soccer, tennis와 같은 시스템 내부 코드
  name        String   @db.VarChar(30)  // 사용자에게 보여질 이름
  createdAt   DateTime @default(now()) @map("created_at") @db.Timestamptz
  updatedAt   DateTime @default(now()) @map("updated_at") @db.Timestamptz

  @@map("sport_types")
}

